<nav role="navigation" class="subnav">
	<ul class="flex flex--wrap justify--end text--center align--items-center">
		{% for item in submenu.get_items %}
			<li class="spacing--horiz-half nav-item {{item.classes | join(' ')}}">
				<a class="nav-link color--gray font--bold font--small text--uppercase " href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
			{% if loop.last %}
				{% if carthide == true %}{% else %}
				<li class="spacing--horiz-half nav-item hidden--mob">
					<span id="cart-toggle"><i class="icon-cart" data-grunticon-embed></i></span>
				</li>
			{% endif %}
				{% else %}<span class=""></span>{% endif %}

		{% endfor %}
	</ul>
</nav><!-- #nav -->