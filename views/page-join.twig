{% extends "base.twig" %}

{% block content %}
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content content-wrap margin--center spacing--vert-4 spacing--gutter {% if post.thumbnail %}{% else %}bg--gray-light{% endif %}">
				<h1 class="text--center h2 font--din color--gold text--uppercase">{{post.title}}</h1>
				{{post.content}}

			</section>
		</article>
{% endblock %}